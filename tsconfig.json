{
  "compilerOptions": {
    "strict": true,
    "outDir": "./dist",
    "target": "ESNext",
    "module": "ESNext",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "noUncheckedIndexedAccess": true,
    "noFallthroughCasesInSwitch": true,
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
